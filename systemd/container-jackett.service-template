[Unit]
Description=Podman container-jackett.service
Documentation=man:podman-generate-systemd(1)
Wants=network-online.target
After=container-vpn.service
RequiresMountsFor=%t/containers

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
TimeoutStopSec=70
ExecStartPre=/bin/rm -f %t/container-jackett.pid %t/container-jackett.ctr-id
ExecStart=/usr/bin/podman run -d \
          --name=jackett \
          --conmon-pidfile %t/container-jackett.pid \
          --cidfile %t/container-jackett.ctr-id \
          --sdnotify=conmon \
          --cgroups=no-conmon \
          --rm \
          --replace \
          --network container:vpn \
          --security-opt=label=disable \
          -e PUID=$PUID \
          -e PGID=$PGID \
          -e TZ=$TZ \
          -v $JACKETT_CONFIG_DIR:/config:Z \
          -v $VIDEOS_DIR:/videos:z \
          --label "io.containers.autoupdate=registry" \
          $JACKETT_IMAGE
ExecStop=/usr/bin/podman stop --ignore --cidfile %t/container-jackett.ctr-id -t 10
ExecStopPost=/usr/bin/podman rm --ignore -f --cidfile %t/container-jackett.ctr-id
Type=notify
NotifyAccess=all

[Install]
WantedBy=multi-user.target default.target
